<ForgotPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "Recuperar Senha"
            font_size: 28

        TextInput:
            id: email
            hint_text: "Digite seu email"
            multiline: False

        Label:
            text: root.message
            color: 1,0,0,1

        Button:
            text: "Enviar senha"
            on_release: root.send_password()

        Button:
            text: "Voltar"
            on_release: app.root.current = "login"