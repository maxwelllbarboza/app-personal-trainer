<ForgotPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Recuperar Senha"
            font_size: 28
            color: 0.1, 0.1, 0.1, 1
            size_hint_y: None
            height: self.texture_size[1] + 20

        TextInput:
            id: email
            hint_text: "Digite seu e-mail cadastrado"
            multiline: False
            font_size: 16
            size_hint_y: None
            height: 45
            background_normal: ''
            background_color: 1, 1, 1, 1
            padding: [10, 10]

        Label:
            text: root.message
            color: (1, 0, 0, 1) if 'erro' in root.message.lower() else (0, 0.5, 0, 1)
            font_size: 14
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: 45

            Button:
                text: "Enviar senha"
                on_release: root.send_password()
                background_color: 0.2, 0.6, 1, 1
                color: 1, 1, 1, 1
                bold: True

            Button:
                text: "Voltar"
                on_release: app.root.current = "login"
                background_color: 0.7, 0.7, 0.7, 1
                color: 0, 0, 0, 1
