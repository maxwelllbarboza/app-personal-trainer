<ForgotPasswordScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: 40
            spacing: 20

            Label:
                text: "Recuperar Senha"
                font_size: 28
                size_hint_y: None
                height: self.texture_size[1]

            TextInput:
                id: email
                hint_text: "Digite seu email"
                multiline: False
                size_hint_y: None
                height: 40

            Label:
                text: root.message
                color: 1, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1]

            Button:
                text: "Enviar senha"
                size_hint_y: None
                height: 45
                on_release: root.send_password()

            Button:
                text: "Voltar"
                size_hint_y: None
                height: 45
                on_release: app.root.current = "login"
