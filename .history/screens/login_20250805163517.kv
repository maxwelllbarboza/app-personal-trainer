<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1  # fundo preto discreto
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.85, None
            height: self.minimum_height
            padding: [40, 60]
            spacing: 24
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # fundo branco do card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [16]

            Label:
                text: "Login"
                font_size: 36
                bold: True
                color: 0.1, 0.1, 0.1, 1
                size_hint_y: None
                height: 50

            TextInput:
                id: email
                hint_text: "E-mail"
                multiline: False
                size_hint_y: None
                height: 48
                padding: [12, 12]
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0.1, 0.1, 0.1, 1
                cursor_color: 0.2, 0.5, 0.9, 1
                font_size: 16

            TextInput:
                id: password
                hint_text: "Senha"
                password: True
                multiline: False
                size_hint_y: None
                height: 48
                padding: [12, 12]
                background_normal: ''
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0.1, 0.1, 0.1, 1
                cursor_color: 0.2, 0.5, 0.9, 1
                font_size: 16

            Label:
