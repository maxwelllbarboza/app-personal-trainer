<LoginScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, None
            height: self.minimum_height
            padding: [40, 60]
            spacing: 20
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]

            Label:
                text: "Login"
                font_size: 36
                bold: True
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: 50

            TextInput:
                id: email
                hint_text: "E-mail"
                multiline: False
                size_hint_y: None
                height: 44
                padding: [10, 10]

            TextInput:
                id: password
                hint_text: "Senha"
                password: True
                multiline: False
                size_hint_y: None
                height: 44
                padding: [10, 10]

            Label:
                text: root.message
                color: 1, 0, 0, 1
                font_size: 14
                size_hint_y: None
                height: 20

            Button:
                text: "Entrar"
                size_hint_y: None
                height: 44
                background_color: 0.2, 0.6, 0.86, 1
                color: 1, 1, 1, 1
                on_release: root.do_login()

            Button:
                text: "Esqueci minha senha"
                background_color: 0.8, 0.8, 0.8, 1
                color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: 44
                on_release: root.forgot_password()
