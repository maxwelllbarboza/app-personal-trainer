<ForgotPasswordScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.02, 0.02, 1  # fundo escuro
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 500
            spacing: 20
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: 'logo_transparente.png'  # Substitua com seu arquivo real
                size_hint: None, None
                size: 180, 180
                allow_stretch: True
                keep_ratio: True
                pos_hint: {"center_x": 0.5}

            Label:
                text: "Personal Trainer"
                font_size: 20
                color: 1, 0.6, 0.2, 1
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: "Recuperar a senha"
                font_size: '18sp'
                color: (1, 0.6, 0.2, 1)
                size_hint_y: None
                height: self.texture_size[1]    

            Label:
                text: "Digite seu e-mail para recuperar a senha"
                halign: 'center'
                valign: 'middle'
                color: 1, 1, 1, 1
                font_size: 15
                size_hint_y: None
                height: 70
                text_size: self.size

            TextInput:
                id: email
                hint_text: "Digite o email"
                multiline: False
                size_hint_y: None
                height: 40
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                padding: 10

            Button:
                text: "Enviar"
                size_hint_y: None
                height: 45
                background_color: 0.6, 0.3, 0.1, 1
                on_release: root.send_password()

            Button:
                text: "Voltar para o Login"
                size_hint_y: None
                height: 30
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                font_size: 12
                on_release: app.root.current = "login"
